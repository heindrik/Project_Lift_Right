<Page
    x:Class="Project_Lift_Right.Workout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_Lift_Right"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:Name="main_canvas" HorizontalAlignment="Left" Height="686" Margin="79,41,0,0" VerticalAlignment="Top" Width="1207" Background="White">
            <TextBox Height="82" Canvas.Left="358" TextWrapping="Wrap"  BorderBrush="Black" Text="Exercise name:
                     Time remaining: " Canvas.Top="493" Width="405"/>
            <TextBox Height="82" Canvas.Left="86" TextWrapping="Wrap" Text="Feedback signal" Canvas.Top="493" Width="267" BorderBrush="Black"/>
            <TextBlock Height="29" Canvas.Left="911" TextWrapping="Wrap" Text="Timer" Canvas.Top="57" Width="145" Foreground="Black" FontSize="25" TextAlignment="Center"/>
            <TextBlock Height="29" Canvas.Left="911" TextWrapping="Wrap" Text="XX : XX" Canvas.Top="91" Width="145" Foreground="Black" FontSize="20" TextAlignment="Center"/>
            <Button x:Name="start_btn" Content="Start" Height="55" Canvas.Left="908" Canvas.Top="202" Width="160" BorderBrush="Black" Foreground="Black" FontSize="20"/>
            <Button x:Name="pause_btn" Content="Pause" Height="55" Canvas.Left="908" Canvas.Top="297" Width="160" BorderBrush="Black" Foreground="Black" FontSize="20"/>
            <Button x:Name="done_btn" Content="Done" Height="88" Canvas.Left="908" Canvas.Top="490" Width="160" BorderBrush="Black" Foreground="Black" FontSize="20" Click="done_btn_Click"/>
        </Canvas>
        <Border BorderBrush="Gray" BorderThickness="2" Grid.Row="0" Canvas.Left="684" Canvas.Top="218" Margin="163,73,521,255">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                Style="{StaticResource SubheaderTextBlockStyle}"
                       Text="Kinect For Windows 2"/>
                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom">
                    <TextBlock Text="Kinect Status:  "/>
                    <TextBlock Text="{Binding StatusText}"/>
                    <TextBlock Text=", FrameWidth =  "/>
                    <TextBlock Text=
                    "{Binding CurrentFrameDescription.Width}"/>
                    <TextBlock Text=", FrameHeight =  "/>
                    <TextBlock Text=
                    "{Binding CurrentFrameDescription.Height}"/>
                </StackPanel>
                <Image x:Name="FrameDisplayImage" Grid.Row="1" 
                Stretch="Uniform"/>
            </Grid>
        </Border>
    </Grid>
 
</Page>
